{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2024",
  "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "skipLibCheck": true,
    "paths": {
      "@app/*": [
        "./app/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./app/**/*.ts"
  ]
}